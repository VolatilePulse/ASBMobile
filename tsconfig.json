{
   "compilerOptions": {
      "module": "es2015",
      "moduleResolution": "node",
      "target": "es5",
      "strict": false,
      "noImplicitAny": false,
      "strictNullChecks": false,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "rootDir": ".",
      "sourceMap": true,
      "lib": [
         "dom",
         "es2017"
      ],
      "typeRoots": [
         "node_modules/@types",
         "src/typings"
      ],
      "baseUrl": "./",
      "paths": {
         "@/*": [
            "src/*"
         ]
      }
   },
   "exclude": [
      "node_modules"
   ]
}
