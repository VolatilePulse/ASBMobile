{
   "compilerOptions": {
      "target": "es2015",
      "module": "es2015",
      "jsx": "preserve",
      "moduleResolution": "node",
      "alwaysStrict": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": false,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "baseUrl": ".",
      "rootDir": "src",
      "lib": [
         "dom",
         "es2017"
      ],
      "types": [
         "node",
         "mocha",
         "chai"
      ],
      "paths": {
         "@/*": [
            "src/*"
         ]
      }
   },
   "include": [
      "src/**/*.ts",
      "src/**/*.vue",
      "tests/**/*.ts"
   ],
   "exclude": [
      "node_modules"
   ]
}
