{
   "compilerOptions": {
      "module": "es2015",
      "moduleResolution": "node",
      "target": "es5",
      "rootDir": "src",
      "alwaysStrict": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": false,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "sourceMap": true,
      "lib": [
         "dom",
         "es2017"
      ],
      "typeRoots": [
         "node_modules/@types",
         "src/types"
      ],
      "baseUrl": "./",
      "paths": {
         "@/*": [
            "src/*"
         ]
      }
   },
   "exclude": [
      "node_modules"
   ]
}
